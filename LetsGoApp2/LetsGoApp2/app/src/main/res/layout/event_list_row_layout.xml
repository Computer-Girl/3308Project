<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_margin">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="10dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_list_row_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:src="@drawable/ic_event_available_black_24dp" />

            <TextView
                android:id="@+id/event_list_row_EventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/event_list_row_Image"
                android:layout_toRightOf="@+id/event_list_row_Image"
                android:padding="@dimen/small_margin"
                android:text="Event name"
                android:textSize="@dimen/large_text" />

            <TextView
                android:id="@+id/event_list_row_EventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/event_list_row_EventName"
                android:layout_below="@+id/event_list_row_EventName"
                android:layout_toRightOf="@+id/event_list_row_Image"
                android:padding="@dimen/small_margin"
                android:text="Description"
                android:textSize="@dimen/small_text" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

